{
  "name": "@zakodium/adonis-mongodb",
  "version": "0.2.0",
  "description": "MongoDB provider for AdonisJs",
  "main": "./lib/providers/MongodbProvider.js",
  "types": "./lib/src/types.d.ts",
  "files": [
    "lib",
    "templates"
  ],
  "keywords": [
    "adonisjs",
    "adonis",
    "mongo",
    "mongodb",
    "orm",
    "provider"
  ],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "adonisjs": {
    "templates": {
      "basePath": "./templates",
      "config": [
        "config/mongodb.txt"
      ]
    },
    "env": {
      "MONGODB_URL": "mongodb://localhost:27017",
      "MONGODB_DATABASE": "test"
    },
    "types": "@zakodium/adonis-mongodb",
    "providers": [
      "@zakodium/adonis-mongodb"
    ],
    "commands": [
      "@zakodium/adonis-mongodb/lib/commands"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "eslint": "eslint commands providers src --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc",
    "test": "npm run eslint",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs",
    "tsc-cjs": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zakodium/adonis-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/zakodium/adonis-mongodb/issues"
  },
  "homepage": "https://github.com/zakodium/adonis-mongodb#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "@adonisjs/ace": "^6.0.0",
    "@adonisjs/core": "^5.0.0-preview.5",
    "@adonisjs/fold": "^6.0.0"
  },
  "devDependencies": {
    "@adonisjs/ace": "^6.8.0",
    "@adonisjs/core": "^2.7.3",
    "@adonisjs/fold": "^6.3.0",
    "@poppinss/fancy-logs": "^1.3.8",
    "@types/jest": "^26.0.12",
    "@types/lodash": "^4.14.161",
    "@types/pluralize": "0.0.29",
    "@zakodium/eslint-config": "^1.0.5",
    "eslint": "^7.8.1",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@poppinss/utils": "^2.5.6",
    "@types/mongodb": "^3.5.26",
    "cli-table3": "^0.6.0",
    "lodash": "^4.17.15",
    "mongodb": "^3.6.1",
    "pluralize": "^8.0.0"
  }
}
