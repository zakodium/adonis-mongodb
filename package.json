{
  "name": "@zakodium/adonis-mongodb",
  "version": "0.3.2",
  "description": "MongoDB provider for AdonisJs",
  "main": "./lib/providers/MongodbProvider.js",
  "types": "./lib/src/types.d.ts",
  "files": [
    "lib",
    "templates"
  ],
  "keywords": [
    "adonisjs",
    "adonis",
    "mongo",
    "mongodb",
    "orm",
    "provider"
  ],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "adonisjs": {
    "templates": {
      "basePath": "./templates",
      "config": [
        "mongodb.txt"
      ]
    },
    "env": {
      "MONGODB_URL": "mongodb://localhost:27017",
      "MONGODB_DATABASE": "test"
    },
    "types": "@zakodium/adonis-mongodb",
    "providers": [
      "@zakodium/adonis-mongodb"
    ],
    "commands": [
      "@zakodium/adonis-mongodb/lib/commands"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "check-types": "tsc --noEmit",
    "eslint": "eslint commands providers src test-utils --ext ts --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc",
    "test-only": "jest",
    "test-coverage": "jest --coverage",
    "test": "npm run test-only && npm run eslint && npm run check-types",
    "tsc": "npm run clean && npm run tsc-cjs",
    "tsc-cjs": "tsc --project tsconfig.prod.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zakodium/adonis-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/zakodium/adonis-mongodb/issues"
  },
  "homepage": "https://github.com/zakodium/adonis-mongodb#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.0.2-beta-rc-7"
  },
  "devDependencies": {
    "@adonisjs/core": "^5.0.2-beta-rc-7",
    "@adonisjs/logger": "^3.0.2",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.162",
    "@types/pluralize": "0.0.29",
    "@poppinss/cliui": "^2.0.2",
    "@zakodium/eslint-config": "^2.1.1",
    "eslint": "^7.11.0",
    "jest": "^26.5.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@poppinss/utils": "^2.5.7",
    "@types/mongodb": "3.5.26",
    "cli-table3": "^0.6.0",
    "lodash": "^4.17.20",
    "mongodb": "^3.6.2",
    "pluralize": "^8.0.0"
  }
}
