{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "inlineSourceMap": true,
    "strict": true,
    "lib": ["ES2022"],
    "target": "es2022",
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "types": ["@adonisjs/auth", "@adonisjs/core", "@types/jest"]
  },
  "include": [
    "./adonis-typings/**/*",
    "./commands/**/*",
    "./src/**/*",
    "./providers/**/*",
    "./test-utils/*"
  ]
}
